<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.rong.app.server.widget.ClearWriteEditText
        android:id="@+id/forget_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="5dip"
        android:hint="输入手机号"
        android:maxLength="11"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:textColor="@color/de_title_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <io.rong.app.server.widget.ClearWriteEditText
            android:id="@+id/forget_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6"
            android:drawableLeft="@drawable/ic_code"
            android:drawablePadding="5dip"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/de_title_bg" />


        <Button
            android:id="@+id/forget_getcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:background="@drawable/rs_select_btn_gray"
            android:clickable="false"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="获取验证码"
            android:textColor="#FFF"
            android:textSize="12dp" />

    </LinearLayout>

    <io.rong.app.server.widget.ClearWriteEditText
        android:id="@+id/forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dip"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/de_title_bg" />

    <io.rong.app.server.widget.ClearWriteEditText
        android:id="@+id/forget_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dip"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/de_title_bg"/>

    <Button
        android:id="@+id/forget_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rs_select_btn_gray"
        android:clickable="false"
        android:text="更改密码"
        android:textColor="#FFF" />

</LinearLayout>